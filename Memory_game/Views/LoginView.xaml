<Window x:Class="Memory_game.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Memory_game.Views"
        xmlns:converters="clr-namespace:Memory_game.Converters"
        mc:Ignorable="d"
        Title="Login"
        Height="500" Width="350"
        Background="#FFFFC1E3"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:ImagePathToImageSourceConverter x:Key="ImageConverter"/>
        <converters:NullToBoolConverter x:Key="NullToBoolConverter"/>
        <!-- Remove previous button styles, apply Kawaii globally -->
    </Window.Resources>

    <StackPanel Margin="20" HorizontalAlignment="Center">

        <!-- Title -->
        <TextBlock Text="🌸 Who's Playing ? 🌸" 
                   FontSize="22" FontWeight="Bold" 
                   FontFamily="Georgia"
                   Foreground="#6A0DAD"
                   HorizontalAlignment="Center"
                   Margin="0,10" />

        <!-- User List -->
        <ListBox ItemsSource="{Binding Users}"
                 SelectedItem="{Binding SelectedUser}"
                 DisplayMemberPath="Username"
                 Height="120" Width="240"
                 Margin="0,10"
                 Background="#DDA0DD"
                 Foreground="#6A0DAD"
                 BorderBrush="#6A0DAD"
                 FontFamily="Georgia"
                 FontSize="14"/>

        <!-- Selected -->
        <TextBlock Text="Selected:" 
                   Margin="0,10,0,0"
                   Foreground="#6A0DAD"
                   FontFamily="Georgia"/>
        <TextBlock Text="{Binding SelectedUser.Username}" 
                   FontWeight="Bold" FontSize="16"
                   Foreground="#6A0DAD"
                   FontFamily="Georgia" />

        <!-- Avatar Image -->
        <Image Source="{Binding SelectedUser.ImagePath, Converter={StaticResource ImageConverter}}"
               Height="100" Width="100"
               Margin="0,10"
               Stretch="Uniform"
               HorizontalAlignment="Center" />

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Create" Width="80" Command="{Binding CreateUserCommand}" Style="{StaticResource KawaiiButtonStyle}"/>
            <Button Content="Delete" Width="80" 
                    Command="{Binding DeleteUserCommand}"
                    IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToBoolConverter}}"
                    Style="{StaticResource KawaiiButtonStyle}"/>
            <Button Content="Play" Width="80" 
                    Command="{Binding PlayCommand}"
                    IsEnabled="{Binding SelectedUser, Converter={StaticResource NullToBoolConverter}}"
                    Style="{StaticResource KawaiiButtonStyle}"/>
        </StackPanel>
    </StackPanel>
</Window>
